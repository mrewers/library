{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "paths": {
      "~*": ["src/*"]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["lib", "node_modules"],
  "include": ["./src/**/*"]
}
