{
  "name": "@mrewers/library-frontend",
  "version": "1.0.0",
  "description": "Inventory of books",
  "main": "index.js",
  "author": "Marek Rewers",
  "license": "MIT",
  "scripts": {
    "dev": "snowpack dev --polyfill-node",
    "build": "parcel build src/index.html",
    "lint": "eslint --ext .js,.ts,.tsx ./",
    "test": "jest",
    "types:CSS": "tsm ./src -p.~ src/ -n kebab -e default --exportTypeInterface TypeStyles --exportTypeName TypeClassName --ignore **/exports.scss"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@cryptopapers/commitlint-config": "^1.0.0",
    "@cryptopapers/eslint-config": "^2.1.0",
    "@cryptopapers/prettier-config": "^1.1.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/preact": "^2.0.1",
    "@types/auth0-js": "^9.14.5",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "autoprefixer": "^10.3.5",
    "commitlint": "^14.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.2.1",
    "miragejs": "^0.1.42",
    "prettier": "^2.4.1",
    "snowpack": "^3.8.8",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.18.0",
    "@snowpack/plugin-sass": "^1.4.0",
    "auth0-js": "^9.16.4",
    "jsonwebtoken": "^8.5.1",
    "preact": "^10.5.14",
    "preact-router": "^3.2.1"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\exports.scss": "<rootDir>/mocks/exports.ts",
      "\\.scss": "<rootDir>/mocks/style.ts",
      "~/(.*)": "<rootDir>/$1"
    },
    "rootDir": "./src",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "verbose": true
  },
  "prettier": "@cryptopapers/prettier-config",
  "staticFiles": {
    "staticPath": "src/assets/public"
  },
  "types": "./src/typings.d.ts"
}
