{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "esnext"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "~*": ["src/*"]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": ["dist", "node_modules"],
  "include": [
    ".eslintrc.js",
    "./config/**/*",
    "./packages/**/*",
    "./src/**/*",
    "src/__mocks__/**/*.ts"
  ]
}
